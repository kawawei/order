FROM node:18-alpine

WORKDIR /app

# Copy package files first for better caching
COPY package*.json ./

# Use npm ci for faster, reliable, reproducible builds
# Only install production dependencies for better security and smaller image
RUN npm ci --only=production=false --silent && \
    npm cache clean --force

# Copy source code
COPY . .

EXPOSE 3002

CMD ["npm", "run", "dev"]
